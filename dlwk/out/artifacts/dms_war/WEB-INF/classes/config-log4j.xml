<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<appender name="STDOUT " class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout" />
	</appender>
	<appender name="DEBUG" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${path}/WEB-INF/log/debug.log " />
		<param name="Append" value="true " />
		<param name="MaxFileSize" value="500KB " />
		<param name="MaxBackupIndex" value="2 " />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy年MM月dd日 HH:mm:ss}-%m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="DEBUG" />
			<param name="LevelMin" value="DEBUG" />
		</filter>
	</appender>
	<appender name="INFO" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${path}/WEB-INF/log/info.log " />
		<param name="Append" value="true " />
		<param name="MaxFileSize" value="500KB " />
		<param name="MaxBackupIndex" value="2 " />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy年MM月dd日 HH:mm:ss}- %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="INFO" />
			<param name="LevelMin" value="INFO" />
			<param name="AcceptOnMatch" value="true" />
		</filter>
	</appender>
	<appender name="ERROR" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${path}/WEB-INF/log/error.log " />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="500KB " />
		<param name="MaxBackupIndex" value="2 " />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyyy年MM月dd日 HH:mm:ss}- %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMax" value="ERROR" />
			<param name="LevelMin" value="ERROR" />
		</filter>
	</appender>
	<root>
		<level value="INFO" />
		<appender-ref ref="STDOUT" />
		<appender-ref ref="DEBUG" />
		<appender-ref ref="INFO" />
		<appender-ref ref="ERROR" />
	</root>
</log4j:configuration>